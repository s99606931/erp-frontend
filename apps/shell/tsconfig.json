{
    "extends": "@erp/typescript-config/nextjs.json",
    "compilerOptions": {
        "declaration": false,
        "declarationMap": false,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@erp/shared": [
                "../../packages/shared/src/index.ts"
            ],
            "@erp/ui": [
                "../../packages/ui/src/index.ts"
            ],
            "@erp/ui/*": [
                "../../packages/ui/src/*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}