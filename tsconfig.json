{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@erp/ui": [
                "packages/ui/src/index.ts"
            ],
            "@erp/ui/*": [
                "packages/ui/src/*"
            ],
            "@erp/shared": [
                "packages/shared/src/index.ts"
            ],
            "@erp/shared/*": [
                "packages/shared/src/*"
            ]
        }
    },
    "include": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "apps/**/*.ts",
        "apps/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist"
    ]
}